@model Nora.Models.Message

@{
    ViewData["Title"] = "Edit Message";
}

<h2>Edit Message</h2>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label for="Content" class="form-label">Message Content</label>
        <textarea asp-for="Content" class="form-control" rows="4" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a class="btn btn-secondary" asp-controller="Messages" asp-action="Index" asp-route-id="@Model.ChannelId"> Cancel </a>
</form>
