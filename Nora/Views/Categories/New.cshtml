@model Nora.Models.Category

<h2 class="text-center">Add Category</h2>

<form asp-action="New" asp-controller="Categories" method="post">

    <div class="form-group">
        <label asp-for="CategoryName" class="form-label">Category name</label>
        <br />
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>

    <button class="btn btn-success mt-2" type="submit">Add</button>
</form>