@model Nora.Models.Category


@{
    ViewBag.Title = "Edit category";
}

<h2 class="text-center">@ViewBag.Title</h2>


<form asp-action="Edit" asp-controller="Categories" asp-route-id="@Model.Id" method="post">

    <div class="form-group">
        <label asp-for="CategoryName" class="form-label">Category name</label>
        <br />
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>


    <button class="btn btn-success mt-2" type="submit">Edit</button>

</form>



