@{
    var channels = ViewBag.Channels as IEnumerable<Nora.Models.Channel>;
}

<br />
<h2 class="text-center">Channels</h2>

<br />

@if (ViewBag.Message != null)
{
    <div class="alert-success p-3 rounded-3 text-center mb-5 @ViewBag.Alert">
        @ViewBag.Message
    </div>
}

<div class="d-flex justify-content-end mb-2 p-3">
    <a class="btn btn-primary" asp-controller="Channels" asp-action="Create"><i class="bi bi-plus"></i> Add Channel</a>
</div>

<div class="container">
    <div class="row">
        @if (channels != null)
        {
            foreach (var channel in channels)
            {
                <div class="col-sm-4 mb-4 d-flex">
                    <div class="card flex-grow-1 d-flex flex-column">
                        <partial name="ChannelInfo" model="@channel" view-data='@new ViewDataDictionary(ViewData) { { "ChannelButtonAction", "JoinChannel" } }' />
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-warning text-center">
                No channels available.
            </div>
        }
    </div>
</div>
