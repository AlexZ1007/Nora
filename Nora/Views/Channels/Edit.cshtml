@model Nora.Models.Channel

<h2 class="text-center mt-5">Editare Canal</h2>
<br />

<div class="container mr-5">
    <div class="row">
        <div class="col-6 offset-3">
            <form method="post" asp-action="Edit" asp-controller="Channels" asp-route-id="@Model.Id">

                <div class="form-group">
                    <label asp-for="Title" class="form-label">Titlu Canal</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">Descriere Canal</label>
                    <textarea asp-for="Description" class="form-control summernote"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">Categorii</label>
                    <div id="categories">
                        @foreach (var category in (IEnumerable<Nora.Models.Category>)ViewBag.Categories)
                        {
                            <div class="form-check">
                                <input type="checkbox"
                                       class="form-check-input"
                                       name="SelectedCategoryIds"
                                       value="@category.Id"
                                @(ViewBag.SelectedCategoryIds.Contains(category.Id) ? "checked" : "") />
                                <label class="form-check-label">@category.CategoryName</label>
                            </div>
                        }
                    </div>
                </div>

                <button class="btn btn-primary mt-3" type="submit">Salvează Modificările</button>
                <a class="btn btn-secondary mt-3" asp-action="Index">Anulează</a>
            </form>
        </div>
    </div>
</div>
