<div class="row">
    @foreach (var user in ViewBag.UsersList)
    {
        <div class="col-md-12 mb-4 col-lg-4 col-md-6">
            <div class="card h-100 shadow-sm">

                <div class="card-header bg-light text-black text-center">
                    <h5 class="mb-0"><i class="bi bi-person-circle"></i> @user.UserName</h5>
                </div>

                <div class="card-body d-flex flex-column justify-content-between">

                    <div class="mb-3">
                        <p class="mb-2">
                            <i class="bi bi-envelope me-2"></i>
                            <strong>Email:</strong> @user.Email
                        </p>
                        @if (@user.PhoneNumber != null)
                        {
                            <p>
                                <i class="bi bi-phone me-2"></i>
                                <strong>Phone:</strong> @user.PhoneNumber
                            </p>
                        }
                    </div>

                    <div class="d-flex justify-content-between mt-auto">
                        <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id"
                           class="btn btn-primary btn-sm">
                                <i class="bi bi-pencil me-1"></i> Edit
                        </a>
                        <a asp-controller="Users" asp-action="Show" asp-route-id="@user.Id"
                           class="btn btn-secondary btn-sm">
                                <i class="bi bi-eye me-1"></i> View
                        </a>
                    </div>


                </div>
            </div>
        </div>

    }

</div>

