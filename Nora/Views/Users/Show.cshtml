@model Nora.Models.ApplicationUser


<div class="card mt-3" style="height:100%; width: 100%;">

    <div class="card-body d-flex justify-content-between flex-column">
        <div>
            <p><i class="bi bi-person"> </i> User name: @Model.UserName</p>

            <p><i class="bi bi-envelope"></i> Email: @Model.Email</p>

            @if (ViewBag.Roles.Count > 0)
            {
                <p><i class="bi bi-person"> </i> Role:
                @foreach (var role in ViewBag.Roles)
                {
                    <span class="rounded-pill bg-dark mx-2 px-4 py-2 text-white">@role</span>
                }
                </p>
            }
        </div>

        
        @if ((string)Model.Id != ViewBag.UserCurent.Id)
        {
            <div class="d-flex flex-row justify-content-between my-3">
                <form asp-controller="Users" asp-action="Delete" method="post" asp-route-id="@Model.Id">
                    <button type="submit" class="btn btn-danger">Delete user</button>
                </form>
            </div>
        }

    </div>
</div>






